body {
    max-width: 920px;
    margin: auto;
    font-family: 'Arimo', 'sans-serif';
}

ul {
    padding-left:0;
}

a:visited {
    color: black;
}
#top-info {
    padding-top: 50px;
}

.logo-main {
    width: 75px;
}

.head-name {
    display: inline;
    font-size: 2.3em;
    margin:0;
}

.menu {
    width:100%;
    overflow: visible;
    background-color: #506B85;
}

.menu ul {
    list-style-type: none;
    text-align: center;
    width:100%;
    text-align: center;
}

.menu ul li {
    display: inline-block;
}

.menu ul li a {
    text-decoration: none;
    font-size: 1.2em;
    display: block;
    color:black;
}

.menu ul li a:hover {
    color:white;
}

.menu ul li:first-of-type {
    border-top:;
}

.cycle {
    margin-top:20px;
}

blockquote p {
    text-transform: uppercase;
    font-family: 'Arimo';
}

blockquote h4 {
    padding-bottom: 100px;
    font-style:italic;
}

.box {
    width: 29%;
    display:inline-block;
    border:1px solid black;
    border-radius:5px;
    min-height:100px;
    margin-right:5%;
    margin-bottom:200px;
}

.box:last-of-type {
    margin-right:0;
}

.cta-text {
    padding: 10px 0;
    color:black;
    font-weight:bold;
    text-align:center;
}
#container {
    white-space:nowrap;
    text-align:center;
}

.box:hover {
    background-color: #7CB2B3;
}

#footer {
    width:100%;
    overflow: visible;
    background-color: #506B85;
}

#footer ul {
    list-style-type: none;
    text-align: center;
}

#footer li {
    display: inline;
}

#footer ul li a {
    text-decoration: none;
    font-size: .9em;
    display: inline-block;
    padding: 4px 25px;
    color:black;
}

#footer ul li a:hover {
    color:white;
}


#footer li:first-child:before {
content: none;
}

@media screen and (max-width: 830px) {
body {
