.menu li {
    margin:5px 0px 5px 0px;
    display:block;
    clear:both;
}
 
.menu a {
    display:block;
    font-size:23px;
}
 
.toggle-nav {
    padding:6px 5px;
    float:right;
    display:inline-block;
    }
 
.toggle-nav:hover, .toggle-nav.active {
    text-decoration:none;
    position: relative;
    z-index:4;
}
}

@media screen and (max-width:650px) {
.box {
    width:100%;
    margin:0;
}

}